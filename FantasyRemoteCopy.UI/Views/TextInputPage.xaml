<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FantasyRemoteCopy.UI.Views.TextInputPage"
             Title="{Binding Title}"
             x:Name="cp">
    <Grid RowDefinitions="*,auto">
        <Editor x:Name="edit" Text="{Binding Content}" Placeholder="input content here" />
        <Button Text="SEND" Command="{Binding SendDataCommand}" x:Name="sendBtn" Grid.Row="1"
                BackgroundColor="DodgerBlue" TextColor="White" />
    </Grid>
</ContentPage>