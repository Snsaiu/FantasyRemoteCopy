<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:extension="clr-namespace:FantasyRemoteCopy.UI.Extensions"
             x:Class="FantasyRemoteCopy.UI.Views.TextInputPage"
             Title="输入文本"
             x:Name="cp">
    <Grid RowDefinitions="*,auto">
        <Editor x:Name="edit" Text="{Binding Content}" Placeholder="input content here" />
        <Button Text="确定" Command="{Binding SendDataCommand}" x:Name="sendBtn" Grid.Row="1"
                 />
    </Grid>
</ContentPage>