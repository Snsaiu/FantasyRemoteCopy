      WidthRequest="{OnPlatform WinUI=40,
                                MacCatalyst=50}" />

                            <Grid RowDefinitions="*,*" Grid.Column="1" Margin="10,0,0,0" HorizontalOptions="StartAndExpand">
                                <Label
                                    VerticalOptions="Center"
     Text="{Binding NickName}" />

                                <HorizontalStackLayout Grid.Row="1">
                                    <Image HeightRequest="12" WidthRequest="12" Margin="0,2,0,0" Source="wifi.png" VerticalOptions="Start" ></Image>
                                    <Label Text="{Binding Flag}" FontSize="10" Margin="5,0,0,0" VerticalOptions="Start"/>
                                </HorizontalStackLayout>
                            </Grid>
                            
                        </Grid>

                    </Grid>
                    
                
                    
