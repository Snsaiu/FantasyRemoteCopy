        <Image
            Grid.ColumnSpan="3"
            Aspect="AspectFill"
            IsOpaque="true"
            Opacity="0.6"
            Source="header.png" />
        <Grid Padding="5" ColumnDefinitions="auto,*,auto">

            <!--  图片  -->
            <Grid>

                <Border
                    BackgroundColor="OrangeRed"
                    HeightRequest="80"
                    Stroke="transparent"
                    WidthRequest="80">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="50" />
                    </Border.StrokeShape>
                </Border>
                <Label
                    FontSize="60"
                    HorizontalOptions="Center"
                    Text="{Binding UserName, Converter={converters:TextToHeaderCharConverter}}"
                    TextColor="White"
                    VerticalOptions="Center" />
            </Grid>

            <!--  用户名和设备昵称  -->
            <VerticalStackLayout Grid.Column="1" Margin="5,0,0,0" VerticalOptions="CenterAndExpand">
                <Label
                 
                    FontSize="25"
                    Text="{Binding UserName}"
                    Margin="0,0,0,5"
                    TextColor="Black"
                    VerticalOptions="Center" />
                <StackLayout Orientation="Horizontal">
                    <Label
                   
                        TextColor="Black"
                        FontSize="{OnPlatform MacCatalyst=15,
                                              WinUI=10}"
                        Text="{extension:Translate NickOfName}" />
                    <Label
                        FontSize="{OnPlatform MacCatalyst=15,
                                              WinUI=10}"
                        Text="{Binding DeviceNickName}"
                        TextColor="Black" />
                </StackLayout>

            </VerticalStackLayout>

            <Grid Grid.Column="2"  RowDefinitions="auto,auto">


                <ImageButton
                    Grid.Row="0"
                        BackgroundColor="Transparent"
                        Command="{Binding GotoSettingPageCommand}"
                        HeightRequest="40"
                    BorderWidth="0"
                    HorizontalOptions="EndAndExpand"
                    Margin="0,0,0,10"
                        Source="setting.png"
                        WidthRequest="40" />
                
                <HorizontalStackLayout Grid.Row="1">
                    <Grid>
                        <Ellipse
                            x:Name="downloadEllipseFill"
                            Fill="Red"
                            HeightRequest="8"
                            IsVisible="{Binding IsDownLoadingVisible}"
                            VerticalOptions="Center"
                            WidthRequest="8" />
                        <Ellipse
                            x:Name="downloadEllipse"
                            Fill="Transparent"
                            HeightRequest="10"
                            IsVisible="{Binding IsDownLoadingVisible}"
                            Stroke="red"
                            VerticalOptions="Center"
                            WidthRequest="10" />
                    </Grid>

                    <ImageButton Margin="0,0,10,0" BorderWidth="0" BackgroundColor="Transparent" HeightRequest="30" WidthRequest="30" Source="search.png">
                       
                    </ImageButton>

                    <AbsoluteLayout Margin="5,0" VerticalOptions="Center">
                        <ImageButton
                            BackgroundColor="Transparent"
                            BorderWidth="0"
                            Command="{Binding GotoListCommand}"
                            HeightRequest="30"
                            Source="list.png"
                            WidthRequest="30" />
                        <Ellipse
                            AbsoluteLayout.LayoutBounds="1,0"
                            AbsoluteLayout.LayoutFlags="XProportional"
                            Fill="red"
                            HeightRequest="10"
                            HorizontalOptions="End"
                            IsVisible="{Binding NewMessageVisible}"
                            WidthRequest="10" />
                    </AbsoluteLayout>

                </HorizontalStackLayout>

            </Grid>
        </Grid>

        <Grid Grid.Row="1" ColumnDefinitions="*,*,*">
            <Button Text="文本"></Button>
            <Button Grid.Column="1" Text="文件"></Button>
            <Button Grid.Column="2" Text="文件夹"></Button>
        </Grid>

        <!--  列表  -->
        <CollectionView Grid.Row="2" ItemsSource="{Binding DiscoveredDevices}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout ItemSpacing="2" Orientation="Vertical" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                 
                    <Grid ColumnDefinitions="40,*">

                        <CheckBox/>

                        <Grid Grid.Column="1" ColumnDefinitions="auto,*">

                            <Image
