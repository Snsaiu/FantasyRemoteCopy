<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Detils"
             x:Class="FantasyRemoteCopy.UI.Views.DetailPage">
    <Grid RowDefinitions="*,auto">

        <Editor x:Name="edit" Text="{Binding Content}"></Editor>
        <Button Text="COPY" Command="{Binding CopyCommand}" x:Name="sendBtn" Grid.Row="1" BackgroundColor="DodgerBlue" TextColor="White"></Button>
    </Grid>
</ContentPage>