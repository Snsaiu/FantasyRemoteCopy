<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Name="cp"
             x:Class="FantasyRemoteCopy.UI.Controls.BlinCircle">
    <Grid>
        <Ellipse Fill="{Binding  Source={x:Reference cp},Path=Color}" x:Name="ine" WidthRequest="8" HeightRequest="8"  VerticalOptions="Center" ></Ellipse>
        <Ellipse Fill="Transparent" x:Name="oute" Stroke="{Binding Source={x:Reference cp},Path=Color}" WidthRequest="10" HeightRequest="10"  VerticalOptions="Center" />
    </Grid>
</ContentView>
