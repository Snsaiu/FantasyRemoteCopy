@page "/home/text-input"
@using Microsoft.FluentUI.AspNetCore.Components.Icons.Regular
@inherits PageComponentBase

<div>
    <FluentHeader>
        <FluentGrid Style="width: 100%">
            <FluentGridItem xs="2">
                <FluentButton OnClick="this.ReturnCommand" IconStart="@(new Size24.ArrowCircleLeft())"></FluentButton>
            </FluentGridItem>
            <FluentGridItem xs="8">
                <FluentLabel  Alignment="HorizontalAlignment.Center" Typo="Typography.PageTitle">@Localizer["InputText"]</FluentLabel>
            </FluentGridItem>
            <FluentGridItem xs="2">
                <FluentButton Style="display: flex;justify-content: flex-end;" IconStart="@(new Size24.Send())" OnClick="this.SubmitCommand"></FluentButton>
            </FluentGridItem>
        </FluentGrid>
    </FluentHeader>

    <FluentTextArea Rows="20" Resize="TextAreaResize.Vertical"  @bind-Value="Text"
                    Placeholder="@Localizer["InputTextPlaceholder"]" Autofocus="true"
                    Style="width: 100%;"></FluentTextArea>
</div>

