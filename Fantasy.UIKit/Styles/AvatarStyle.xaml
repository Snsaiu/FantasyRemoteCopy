<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="Fantasy.UIKit.Styles.AvatarStyle"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:uiKit="clr-namespace:Fantasy.UIKit">
    <Style x:Key="DefaultAvatarStyle" TargetType="uiKit:Avatar">
        <Setter Property="MinimumHeightRequest" Value="60" />
        <Setter Property="MinimumWidthRequest" Value="60" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="CornerRadiusShape" Value="Full" />
        <Setter Property="BorderColor" Value="ForestGreen" />
        <Setter Property="BackgroundColor" Value="Red" />
        <Setter Property="WidthRequest" Value="60" />
        <Setter Property="HeightRequest" Value="60" />
    </Style>
</ResourceDictionary>