<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="Fantasy.UIKit.Styles.ButtonStyle"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:Fantasy.UIKit">

    <Style x:Key="DefaultButtonStyle" TargetType="view:Button">
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="BackgroundColor" Value="Gold" />
        <Setter Property="ForegroundColor" Value="Green" />
        <Setter Property="CornerRadiusShape" Value="Full" />
        <Setter Property="BorderColor" Value="Blue" />
        <Setter Property="StateColor" Value="Black" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="MinimumHeightRequest" Value="40" />
        <Setter Property="MinimumWidthRequest" Value="40" />
    </Style>
</ResourceDictionary>